body {
  font-family: Arial, sans-serif;
  background: #f5f7fa;
  margin: 0;
  padding: 40px 20px;
  display: flex;
  justify-content: center;
}

form {
  background: white;
  width: 100%;
  max-width: 480px;
  border-radius: 10px;
  padding: 30px;
  box-shadow: 0 8px 20px rgba(0,0,0,0.1);
  overflow: hidden;
}

/* ---------- Hidden Radio Buttons ---------- */
input[type="radio"] {
  display: none;
}

/* Step container */
.steps {
  position: relative;
  width: 100%;
  height: 420px;
  overflow: hidden;
}

/* Step panels */
.step {
  position: absolute;
  width: 100%;
  top: 0;
  left: 100%;
  opacity: 0;
  transform: translateX(30px);
  transition: all 0.5s ease;
}

/* Show active step */
#step1:checked ~ .steps .step1,
#step2:checked ~ .steps .step2,
#step3:checked ~ .steps .step3 {
  left: 0;
  opacity: 1;
  transform: translateX(0);
}

h2 {
  margin-top: 0;
  color: #333;
}

/* Inputs */
input, textarea {
  width: 100%;
  padding: 12px;
  margin: 10px 0;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 1rem;
}

/* Navigation Buttons */
.nav-buttons {
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
}

.nav-buttons label,
button {
  padding: 12px 20px;
  background: #4e73df;
  color: white;
  border-radius: 6px;
  cursor: pointer;
  border: none;
  text-align: center;
  flex: 1;
  margin: 0 5px;
}

.nav-buttons label:hover,
button:hover {
  background: #2e59d9;
}

/* Submit button */
button {
  width: 100%;
  margin-top: 10px;
}

/* ---------- Step Indicators (Dots) ---------- */
.indicators {
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
}

.indicators label {
  width: 14px;
  height: 14px;
  border-radius: 50%;
  background: #ccc;
  margin: 0 6px;
  cursor: pointer;
  transition: 0.3s;
}

#step1:checked ~ .indicators label[for="step1"],
#step2:checked ~ .indicators label[for="step2"],
#step3:checked ~ .indicators label[for="step3"] {
  background: #4e73df;
  transform: scale(1.2);
}

/* ---------- Responsive ---------- */
@media (max-width: 480px) {
  .nav-buttons {
    flex-direction: column;
  }
